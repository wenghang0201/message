{
  "appenders": {
    "console": {
      "type": "console"
    },
    "app": {
      "type": "file",
      "filename": "logs/app.log",
      "maxLogSize": 10485760,
      "backups": 3,
      "compress": true
    },
    "errors": {
      "type": "file",
      "filename": "logs/errors.log",
      "maxLogSize": 10485760,
      "backups": 3,
      "compress": true
    },
    "errorFilter": {
      "type": "logLevelFilter",
      "appender": "errors",
      "level": "error"
    }
  },
  "categories": {
    "default": {
      "appenders": ["console", "app", "errorFilter"],
      "level": "info"
    }
  }
}
