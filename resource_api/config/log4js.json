{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "logs/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "logs/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "file",
      "filename": "logs/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    },
    "score": {
      "type": "dateFile",
      "filename": "logs/socre.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "out": {
      "type": "stdout"
    }
  },
  "categories": {
    "default": {
      "appenders": ["app", "errors", "out"],
      "level": "debug"
    },
    "score": {
      "appenders": ["score", "out"],
      "level": "error"
    },
    "http": {
      "appenders": ["access"],
      "level": "DEBUG"
    }
  }
}
